rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return isAuth() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuth()
        && exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid))
        && get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.isAdmin == true;
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /athletes/{athleteId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /teams/{teamId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /leagues/{leagueId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /leagueSeasons/{seasonId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /lists/{listId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /adminUsers/{uid} {
      allow read: if isSelf(uid) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /users/{uid}/{document=**} {
      allow read, write: if isSelf(uid);
    }

    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuth()
        && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if isAuth()
        && resource.data.authorUid == request.auth.uid;

      match /likes/{uid} {
        allow read: if true;
        allow write: if isSelf(uid);
      }

      match /replies/{replyId} {
        allow read: if true;
        allow create: if isAuth()
          && request.resource.data.authorUid == request.auth.uid;
        allow update, delete: if isAuth()
          && resource.data.authorUid == request.auth.uid;

        match /likes/{uid} {
          allow read: if true;
          allow write: if isSelf(uid);
        }
      }
    }

    match /objectTags/{objectId}/tags/{tagId} {
      allow read: if true;
      allow write: if isAuth();

      match /votes/{uid} {
        allow read: if true;
        allow write: if isSelf(uid);
      }
    }

    match /publicProfiles/{appUserId} {
      allow read: if true;
      allow create: if isAuth()
        && request.resource.data.ownerUid == request.auth.uid;
      allow update: if isAuth()
        && resource.data.ownerUid == request.auth.uid
        && request.resource.data.ownerUid == resource.data.ownerUid;
      allow delete: if isAuth()
        && resource.data.ownerUid == request.auth.uid;
    }

    match /joinRequests/{requestId} {
      allow create: if isAuth()
        && request.resource.data.requesterUid == request.auth.uid;
      allow read: if isAuth()
        && resource.data.requesterUid == request.auth.uid;
    }
  }
}
